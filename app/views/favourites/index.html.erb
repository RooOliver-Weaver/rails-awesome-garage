<div class="garage-container">
  <div class="list">
  <% @favourites.each do |favourite| %>
    <div class="garage-card">
      <div class="garage-image-container">
        <%= image_tag "banner-image.jpg", class: "garage-car-image" %>
      </div>
        <div class="car-info">
          <h2><%= favourite.car.brand %></h2>
          <p><%= favourite.car.model %></p>
          <p><%= favourite.car.year %> | <%= favourite.car.fuel %></p>
        </div>
        <div class="delete-button-container">
          <%= link_to  '🗑️', favourite_path(favourite), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button-delete" %>
          </div>
    </div>
  <% end %>
  </div>
</div>
