<div class="home-container">
  <% @cars.each do |car| %>
    <%= link_to car_path(car), class: "car-link" do %>
      <div class="card">
        <h2><%= car.brand %></h2>
        <p><%= car.model %> <%= car.year %> </p>
        <div class="image-container">
          <%= image_tag "#{default_car_image(car.brand)}", class: "car-image" %>
          <div class="badge"><%= car.owner.nickname %></div>
        </div>
        <div class="card-footer">
